---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.21/dist/katex.min.css"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <article>
      <slot />
    </article>
  </body>
</html>

<style is:global>
  /* === Reset === */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* === Typography === */
  body {
    font-family: 'Source Sans Pro', sans-serif;
    background: #ffffff;
    color: #1a1a2e;
    line-height: 1.7;
    font-size: 17px;
  }

  /* === CSS Grid Layout (Distill-inspired) === */
  article {
    display: grid;
    grid-template-columns:
      [full-start] 1fr
      [wide-start] minmax(0, 168px)
      [body-start] minmax(min-content, 648px) [body-end]
      minmax(0, 168px) [wide-end]
      1fr [full-end];
    row-gap: 1.5rem;
    padding: 2rem 0;
  }

  /* All direct children default to body column */
  article > * {
    grid-column: body;
  }

  /* Width variants */
  article > .l-body   { grid-column: body; }
  article > .l-wide   { grid-column: wide; }
  article > .l-outset { grid-column: wide; }
  article > .l-full   { grid-column: full; }

  /* Margin notes (right gutter) */
  article > .l-margin {
    grid-column: wide-end / full-end;
    font-size: 0.85rem;
    color: #64748b;
    line-height: 1.5;
    padding-right: 1rem;
  }

  /* === Headings === */
  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #0f0f23;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a2e;
    margin-top: 0.5rem;
  }

  h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #1a1a2e;
  }

  /* === Body text === */
  p {
    margin-bottom: 0;
  }

  a {
    color: #2563eb;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  ul, ol {
    padding-left: 1.5rem;
  }

  /* === Figures === */
  figure {
    margin: 0;
    container-type: inline-size;
  }

  figcaption {
    font-size: 0.875rem;
    color: #64748b;
    text-align: center;
    margin-top: 0.75rem;
    line-height: 1.5;
  }

  figcaption strong {
    color: #374151;
  }

  /* Legacy figure-container class (backwards compat with test-figure) */
  .figure-container {
    margin: 0;
    padding: 1rem;
    background: #f8f9fa;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
  }

  .figure-caption {
    font-size: 0.875rem;
    color: #64748b;
    text-align: center;
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* === D3 Chart Styles (shared across all chart types) === */
  .d3-chart-container svg {
    display: block;
  }

  .d3-chart-container .axis text {
    fill: #374151;
    font-size: 11px;
  }

  .d3-chart-container .axis line,
  .d3-chart-container .axis path {
    stroke: #9ca3af;
  }

  .d3-chart-container .grid line {
    stroke: #e5e7eb;
    stroke-opacity: 0.7;
  }

  .d3-chart-container .grid path {
    stroke: none;
  }

  .d3-chart-container .no-data {
    color: #6b7280;
    text-align: center;
    padding: 2rem;
    font-style: italic;
  }

  /* Tooltip (appended to body by D3 BaseChart) */
  .tooltip {
    position: absolute;
    background: #1f2937;
    color: #f9fafb;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 13px;
    line-height: 1.4;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  /* === KaTeX === */
  .katex-display {
    overflow-x: auto;
    overflow-y: hidden;
    padding: 0.5rem 0;
  }

  .katex {
    font-size: 1.05em;
  }

  /* === Code === */
  code {
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
    font-size: 0.9em;
    background: #f1f5f9;
    padding: 0.15em 0.35em;
    border-radius: 3px;
  }

  pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1rem 1.25rem;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  pre code {
    background: none;
    padding: 0;
    border-radius: 0;
    color: inherit;
    font-size: inherit;
  }

  /* === Mobile: collapse to single column === */
  @media (max-width: 768px) {
    article {
      grid-template-columns: [full-start wide-start body-start] 1fr [body-end wide-end full-end];
      padding: 1.5rem 1rem;
    }

    article > .l-margin {
      grid-column: body;
      border-left: 3px solid #e2e8f0;
      padding-left: 1rem;
      margin: 0;
    }
  }
</style>
